let currentQuestionIndex = 0;
let currentQuiz = "quiz1"; // Commence avec le premier quiz

const questions = {
    quiz1: [
        {
            question: "Quel philosophe a écrit 'Ainsi parlait Zarathoustra'?",
            answers: ["Friedrich Nietzsche", "Platon", "Descartes", "Socrate"],
            correct: 0
        },
