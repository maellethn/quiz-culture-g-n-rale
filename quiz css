.image-container {
    display: flex; /* Utilise Flexbox pour disposer les images horizontalement */
    justify-content: center; /* Espace les images avec des marges égales */
    align-items: center; /* Centre verticalement les éléments (images et légendes) */
    width: 100%; /* Prend toute la largeur disponible */
    margin: 50px auto; /* Centrer le conteneur avec un espacement vertical */
}

.image-item {
    text-align: center; /* Centre les légendes sous les images */
    width: 30%; /* Chaque image prend 30% de la largeur totale */
}

.image-Nietzsche {
    width: 500px; /* Largeur de l'image */
    height: auto; /* Conserve le rapport d'aspect */
    cursor: pointer;
    margin-top: 20px;

}

.image-Nietzsche:hover {
    transform: scale(0.9); /* Augmente la taille de l'image de 10% lors du survol */
    cursor: pointer; /* Change le curseur en mode pouce */
    transition: transform 0.3s ease; /* Transition douce pour le changement de taille */
}

